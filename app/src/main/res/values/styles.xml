<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.UdhaarPay" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Error colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.UdhaarPay.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.UdhaarPay.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.UdhaarPay.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.UdhaarPay.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.UdhaarPay.Caption</item>
    </style>

    <!-- No Action Bar theme -->
    <style name="Theme.UdhaarPay.NoActionBar" parent="Theme.UdhaarPay">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.UdhaarPay.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.UdhaarPay.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.UdhaarPay.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.UdhaarPay.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.UdhaarPay.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <!-- Card Styles -->
    <style name="Card.UdhaarPay" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.UdhaarPay.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Button.UdhaarPay.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="Toolbar.UdhaarPay" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark</item>
        <item name="titleTextColor">@color/colorOnPrimary</item>
    </style>

    <!-- Icon Button Styles -->
    <style name="IconButton.UdhaarPay" parent="Widget.Material3.Button.IconButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconTint">@color/colorOnPrimary</item>
    </style>
</resources>
