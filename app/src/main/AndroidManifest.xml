<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for network operations -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- NFC permissions for contactless payments -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="false" />
    <uses-feature android:name="android.hardware.nfc.hce" android:required="false" />

    <!-- Camera permission for QR code scanning -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Biometric authentication -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <!-- Vibration for haptic feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Wake lock for background operations -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UdhaarPay"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.UdhaarPay.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Authentication Activities -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.UdhaarPay.NoActionBar" />

        <activity
            android:name=".ui.auth.BiometricAuthActivity"
            android:exported="false"
            android:theme="@style/Theme.UdhaarPay.NoActionBar" />

        <!-- Payment Activities -->
        <activity
            android:name=".SendMoneyActivity"
            android:exported="false" />

        <activity
            android:name=".AddMoneyActivity"
            android:exported="false" />

        <activity
            android:name=".PayBillsActivity"
            android:exported="false" />

        <activity
            android:name=".ScanPayActivity"
            android:exported="false" />

        <activity
            android:name=".ReceiveMoneyActivity"
            android:exported="false" />

        <!-- Service Activities -->
        <activity
            android:name=".MobileRechargeActivity"
            android:exported="false" />

        <activity
            android:name=".ElectricityBillActivity"
            android:exported="false" />

        <activity
            android:name=".GasBillActivity"
            android:exported="false" />

        <activity
            android:name=".WaterBillActivity"
            android:exported="false" />

        <activity
            android:name=".DTHRechargeActivity"
            android:exported="false" />

        <activity
            android:name=".InternetRechargeActivity"
            android:exported="false" />

        <activity
            android:name=".BroadbandRechargeActivity"
            android:exported="false" />

        <!-- Financial Services -->
        <activity
            android:name=".WalletActivity"
            android:exported="false" />

        <activity
            android:name=".CreditScoreActivity"
            android:exported="false" />

        <activity
            android:name=".BudgetTrackerActivity"
            android:exported="false" />

        <activity
            android:name=".ExpenseManagerActivity"
            android:exported="false" />

        <activity
            android:name=".InvestingActivity"
            android:exported="false" />

        <!-- Banking & Cards -->
        <activity
            android:name=".BankSelectionActivity"
            android:exported="false" />

        <activity
            android:name=".AccountDetailsActivity"
            android:exported="false" />

        <activity
            android:name=".CreditCardApplicationActivity"
            android:exported="false" />

        <activity
            android:name=".DematAccountActivity"
            android:exported="false" />

        <!-- Support & Settings -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <activity
            android:name=".PaymentSettingsActivity"
            android:exported="false" />

        <activity
            android:name=".ChatSupportActivity"
            android:exported="false" />

        <activity
            android:name=".WebViewActivity"
            android:exported="false" />

        <!-- History & Reports -->
        <activity
            android:name=".HistoryActivity"
            android:exported="false" />

        <!-- Loan & Credit -->
        <activity
            android:name=".LoanApplicationActivity"
            android:exported="false" />

        <activity
            android:name=".EMICalculatorActivity"
            android:exported="false" />

        <!-- Travel & Booking -->
        <activity
            android:name=".BusTicketBookingActivity"
            android:exported="false" />

        <activity
            android:name=".TicketBookingActivity"
            android:exported="false" />

        <!-- Firebase Messaging Service -->
        <service
            android:name=".data.notifications.UdhaarPayFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- WorkManager initialization -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

        <!-- File provider for sharing -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Network security config -->
        <meta-data
            android:name="android.security.net.config"
            android:resource="@xml/network_security_config" />

    </application>

</manifest>
